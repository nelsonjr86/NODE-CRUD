<h3>{{viewTitle}}</h3>

<div class="col-md-9 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>New Pessoa</h3>
    </div>
    <div class="card-body">
<form  action="/pessoa/new-pessoa" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{pessoa._id}}">
    
    <!-- First Name -->
    <div class="input-group col-lg-12 mb-4">
        <div class="input-group-prepend">
            <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa fa-user text-muted"></i>
            </span>
        </div>
        <input id="nome" type="text" name="nome" placeholder="Nome" class="form-control bg-white border-left-0 border-md" value="{{pessoa.nome}}">
    </div>
    
    <!-- Email Address -->
    <div class="input-group col-lg-12 mb-4">
        <div class="input-group-prepend">
            <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa fa-envelope text-muted"></i>
            </span>
        </div>
        <input id="email" type="email" name="email" placeholder="Email" class="form-control bg-white border-left-0 border-md" value="{{pessoa.email}}">
    </div>

    <!-- Phone Number -->
    <div class="input-group col-lg-12 mb-4">
        <div class="input-group-prepend">
            <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa fa-phone-square text-muted"></i>
            </span>
        </div>
        <select id="countryCode" name="countryCode" style="max-width: 80px" class="custom-select form-control bg-white border-left-0 border-md h-100 font-weight-bold text-muted">
            <option value="">+31</option>
            <option value="">+21</option>
            <option value="">+15</option>
            <option value="">+18</option>
        </select>
        <input id="telefone" type="tel" name="telefone" placeholder="Telefone" class="form-control bg-white border-md border-left-0 pl-3" value="{{pessoa.telefone}}">
    </div>

    <!-- First Cidade -->
    <div class="input-group col-lg-12 mb-4">
        <div class="input-group-prepend">
            <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa fa-globe"></i>
            </span>
        </div>
        <input id="cidade" type="text" name="cidade" placeholder="Cidade" class="form-control bg-white border-left-0 border-md" value="{{pessoa.cidade}}">
    </div>

